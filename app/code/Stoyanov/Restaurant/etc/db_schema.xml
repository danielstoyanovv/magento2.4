<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="restaurants" resource="default" engine="innodb" comment="Restaurants Table">

        <!-- Primary Key -->
        <column xsi:type="int" name="entity_id" nullable="false" identity="true" unsigned="true"
                comment="Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <!-- Restaurant Name -->
        <column xsi:type="varchar" name="name" nullable="false" length="30" comment="Restaurant Name"/>

        <!-- Capacity -->
        <column xsi:type="int" name="capacity" nullable="true" default="0" comment="Capacity"/>

        <!-- Location -->
        <column xsi:type="varchar" name="location" nullable="true" length="30" comment="Location"/>

        <!-- Created At -->
        <column xsi:type="timestamp" name="created_at" nullable="false"
                on_update="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false"
                default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <index referenceId="STOYANOV_RESTAURANT_RESTAURANT_NAME" indexType="fulltext">
            <column name="name"/>
        </index>
    </table>
</schema>
