<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="new_restaurant_created">
        <observer name="stoyanov_restaurant_observer"
                  instance="Stoyanov\Restaurant\Observer\RestaurantCreatedObserver"/>
    </event>

    <event name="restaurant_deleted">
        <observer name="stoyanov_restaurant_observer"
                  instance="Stoyanov\Restaurant\Observer\RestaurantDeletedObserver"/>
    </event>

</config>
