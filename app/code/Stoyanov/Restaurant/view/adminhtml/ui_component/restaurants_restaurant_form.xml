<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
<!--            first part - take the namespace-->
<!--            second part - take dataSource name-->
            <item name="provider" xsi:type="string">restaurants_restaurant_form
                .stoyanov_restaurant_restaurant_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Stoyanov\Restaurant\Block\Adminhtml\Restaurant\Edit\Button\Back"/>
            <button name="save" class="Stoyanov\Restaurant\Block\Adminhtml\Restaurant\Edit\Button\Save"/>
            <button name="delete" class="Stoyanov\Restaurant\Block\Adminhtml\Restaurant\Edit\Button\Delete"/>
        </buttons>
<!--        take filename for this value-->
        <namespace>restaurants_restaurant_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>restaurants_restaurant_form.stoyanov_restaurant_restaurant_data_source</dep>
        </deps>
    </settings>
    <dataSource name="stoyanov_restaurant_restaurant_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="restaurants/restaurant/save"/>
<!--        <submitUrl path="*/*/save" />-->
        </settings>
        <dataProvider class="Stoyanov\Restaurant\Ui\Component\Edit\DataProvider" name="stoyanov_restaurant_restaurant_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="stoyanov_restaurant_restaurant_fieldset">
        <settings>
            <label />
        </settings>
        <field name="entity_id" formElement="hidden" />
        <field name="name" formElement="input">
            <settings>
                <label translate="true">Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="capacity" formElement="input">
            <settings>
                <label translate="true">Capacity</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="location" formElement="input">
            <settings>
                <label translate="true">Location</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
